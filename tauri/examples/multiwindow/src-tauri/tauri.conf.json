{
  "build": {
    "distDir": "../dist",
    "devPath": "../dist",
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "Content/32x32.png",
        "Content/128x128.png",
        "Content/128x128@2x.png",
        "Content/Icon.icns",
        "Content/Icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool"
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "label": "Main",
        "url": "app",
        "title": "Tauri - Main",
        "width": 800,
        "height": 600
      },
      {
        "label": "Secondary",
        "url": "app",
        "title": "Tauri - Secondary",
        "width": 600,
        "height": 400
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
    }
  }
}
